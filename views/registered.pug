doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
  link(rel='stylesheet' href='/css/jumbotrons.css')
  title Home Page
header
  nav.navbar.navbar-expand-md.navbar-dark.bg-dark
    .navbar-collapse.collapse.w-100.order-1.order-md-0.dual-collapse2
      ul.navbar-nav.mr-auto
        li.nav-item
          a.nav-link(href='/') Home
        li.nav-item
          a.nav-link(href='/author') Author
    .mx-auto.order-0
      a.navbar-brand.mx-auto(href='#') Weather Clother
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='.dual-collapse2')
        span.navbar-toggler-icon
    .navbar-collapse.collapse.w-100.order-3.dual-collapse2
      ul.navbar-nav.ml-auto
        li.nav-item
          a.nav-link(href='/register') Sign Up
main(role='main')
  .jumbotron.alignment
    .container
      h1.display-1.text.quote Thanks For Signing Up #{name.split(" ")[0]}!
      p.text.quote We will send you a confirmation email at #{email} shortly, and your services will be started from tomorrow!
      p.center-button
        a.btn.btn-lg(href='/' role='button') Go Back &raquo;